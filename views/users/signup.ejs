<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp on WanderLust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username : </label>
                <input type="username" name="username" id="username" class="form-control" placeholder="savory" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email : </label>
                <input type="email" name="email" id="email" placeholder="savory@mail.com" class="form-control" required></input>
                <div class="invalid-feedback">Please enter a valid email ID.</div>
            </div> 
            <div class="mb-3">
                <label for="password" class="form-label">Password : </label>
                <input type="password" name="password" id="password" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <button class="btn btn-success mt-3">SignUp</button>
        </form>
    </div>
</div>